{
  "name": "fmg-simple-adjudicator",
  "version": "0.1.6",
  "description": "Simple adjudicator for force-move games",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "scripts": {
    "migrate": "npx truffle migrate",
    "test:all": "node scripts/test.js --env=jsdom --all",
    "test": "npm run copy_contracts:src && node scripts/test.js --env=jsdom",
    "test:ci": "npm run build && npm run ganache:start && sleep 10 && npm run migrate && npm test",
    "build": "tslint --project . && tsc && npm run migrate && npm run copy_contracts:lib",
    "ganache:start": "npx ganache-cli -d -v > ganache.log &",
    "copy_contracts:src": "copyfiles -f './build/contracts/**/*' ./src/artifacts/",
    "copy_contracts:lib": "copyfiles -f './build/contracts/**/*' ./lib/artifacts/"
  },
  "repository": "https://github.com/magmo/force-move-games/tree/master/packages/fmg-simple-adjudicator",
  "author": "Tom Close",
  "license": "MIT",
  "dependencies": {
    "fmg-core": "^0.1.5",
    "sha3": "^1.2.2",
    "web3": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/jest": "^23.3.9",
    "chai": "^4.2.0",
    "dotenv": "^6.1.0",
    "esm": "^3.0.52",
    "ethers": "^4.0.13",
    "solc": "^0.5.0",
    "truffle": "^5.0.0-beta.1",
    "truffle-assertions": "^0.4.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "testMatch": [
      "<rootDir>/test/**/?(*.)(spec|test).ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transformIgnorePatterns": [
      "[/\\\\](node_modules|scripts)[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    },
    "preset": "ts-jest"
  }
}
